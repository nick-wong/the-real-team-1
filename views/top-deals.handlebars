<div class = "section-title container">
  <div class="row arrow">
    <div class="col-xs-2">
      <a href="javascript:history.back()"<span class="glyphicon glyphicon-chevron-left back"></span></a>
    </div>


    <div class="col-xs-8">
      <h4>Top Deals</h4>
    </div>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <h4 class="filter-text">Filter(s): </h4>
    </div>
    <div class="col-xs-8">
    </div>
    <div class="col-xs-2 no-padding">
      <button type="button" class="filter" data-toggle="modal" data-target="#exampleModal">
        <span class="glyphicon glyphicon-filter"></span>
      </button>
    </div>
  </div>
</div>

<hr class="no-padding no-margin">
<br>

{{#each topItems}}
  <div class="container" id="{{id}}">
    <div class="row">
      <div class="col-xs-3">
      </div>
      <div class="col-xs-6 no-padding">
        <a href="/item/{{id}}" class="img-thumbnail"><img src="../img/{{imageURL}}" alt="{{name}}"></a>
      </div>
      <div class="col-xs-3">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-3">
      </div>
      <div class="col-xs-6 item-info text-center">
        <a href="/item/{{id}}"><h4 class="item-name"><strong>{{name}}</strong></h4></a>
        <p class="small-text">{{{short_description}}}</p>
        <span><del>${{old_price}}</del></span> <span class="new-price">${{new_price}}</span>
      </div>
      <div class="col-xs-3">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1">
      </div>
      <div class="col-xs-5 text-center">
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star checked"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
      </div>
      <div class="col-xs-5 text-center">
      {{#if favorited}}
        <span class="favorites-btn glyphicon glyphicon-heart text-danger"></span>
      {{else}}
        <span class="favorites-btn glyphicon glyphicon-heart-empty text-danger"></span>
      {{/if}}
      </div>
      <div class="col-xs-1">
      </div>
    </div>
    <div class="row">
      <div class="col-xs-1">
      </div>
      <div class="col-xs-5 text-center">
        <span>({{reviews_num}})</span>
      </div>
      <div class="col-xs-5 text-center">
        <span>({{favorites_num}})</span>
      </div>
      <div class="col-xs-1">
      </div>
    </div>
    {{#unless @last}}
    <hr>
    {{/unless}}
  </div>

{{/each}}

<br>
