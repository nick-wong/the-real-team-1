      <div class="tab-content">
        <div class="tab-pane active" id="1">
            <ul class="list-group">
              {{#each stores}}
              <li class="list-group-item">
                <div class="row">
                  <div class="col-xs-6">
                    <a href="https://www.{{store}}.com">{{store}}</a>
                  </div>
                  <div class="col-xs-6 price">
                    <del>${{../old_price}}</del> <p class="new-price">${{current_price}}</p><br>
                  </div>
                </div>
                <div class="updated">
                  Updated {{@index}} days ago
                </div>
              </li>
              {{/each}}
            </ul>
        </div>
        <div class="tab-pane" id="2">
          <ul class="list-group">
            <li class="list-group-item">
              <p>Information about this particular product.</p>
            </li>
          </ul>
        </div>
        <div class="tab-pane" id="3">
            <ul class="list-group">
              <li class="list-group-item">
                <canvas id="myChart" width="400" height="400"></canvas>
                <script>
                function newDate(months) {
            			return moment().subtract(months, 'months').toDate();
            		}

                var lineColors = ["#3e95cd", "#8e5ea2", "#3cba9f", "#e8c3b9", "#c45850", "#fff"]
                var ctx = document.getElementById("myChart");
                var myChart = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: [newDate(4),
                					newDate(3),
                					newDate(2),
                					newDate(1),
                					newDate(0)],
                        datasets: [
                          {{#each stores}}
                          {
                            label: '{{store}}',
                            data: [
                              {{#each prices}}
                                {
                                  x: moment('{{date}}'),
                                  y: {{price}}
                                }
                                {{#unless @last}}
                                  ,
                                {{/unless}}
                              {{/each}}
                            ],
                            borderColor: [
                                lineColors[{{@index}}]
                            ],
                            borderWidth: 1,
                            fill: 'false',
                            lineTension: 0
                          }
                          {{#unless @last}}
                            ,
                          {{/unless}}
                        {{/each}}
                      ]
                    },
                    options: {
                      offset: true,
                      responsive: true,
                      scales: {
                				xAxes: [{
                          type: 'time',
              						time: {
                            unit: 'month',
              							parser: 'MM/DD/YYYY HH:mm',
              							tooltipFormat: 'll HH:mm'
              						},
                          scaleLabel: {
              							display: true,
              							labelString: 'Past 6 Months'
              						},
                          ticks: {
                            //source: 'show',
                            autoSkip: true
                          }
                				}],
                				yAxes: [{
                          ticks: {
                            beginAtZero: false,
                            callback: function(value, index, values) {
                              return value.toLocaleString("en-US",{style:"currency", currency:"USD"});
                            }
                          },
              						display: true
              					}]
              				},
                      gridLines: {
                        offsetGridLines: true
                      }
                    }
                });
                </script>
              </li>
            </ul>
        </div>
        <div class="tab-pane" id="4">
