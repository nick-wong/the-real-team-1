  <div class="section-title container">
    <h4>Recommendations for {{user.name}}</h4>
  </div>

  <div id="myCarousel" class="carousel slide content" data-interval="false" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      {{#each recommendations}}
        {{#if @first}}
          <li data-target="#myCarousel" data-slide-to="{{@index}}" class="active"></li>
        {{else}}
          <li data-target="#myCarousel" data-slide-to="{{@index}}"></li>
        {{/if}}
      {{/each}}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      {{#each recommendations}}
        {{#if @first}}
          <div class="item active">
        {{else}}
          <div class="item ">
        {{/if}}
          <div class="container" id="{{id}}">
            <div class="row">
              <div class="col-xs-3">
              </div>
              <div class="col-xs-6 no-padding">
                <a href="/item/{{id}}" class="img-thumbnail"><img src="../img/{{imageURL}}" alt="{{name}}"></a>
              </div>
              <div class="col-xs-3">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-3">
              </div>
              <div class="col-xs-6 item-info text-center">
                <a href="/item/{{id}}"><h4 class="item-name"><strong>{{name}}</strong></h4></a>
                <p class="small-text">{{{short_description}}}</p>
                <span><del>${{old_price}}</del></span> <span class="new-price">${{new_price}}</span>
              </div>
              <div class="col-xs-3">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-1">
              </div>
              <div class="col-xs-5 text-center">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
              </div>
              <div class="col-xs-5 text-center">
              {{#if favorited}}
                <span class="favorites-btn glyphicon glyphicon-heart text-danger"></span>
              {{else}}
                <span class="favorites-btn glyphicon glyphicon-heart-empty text-danger"></span>
              {{/if}}
              </div>
              <div class="col-xs-1">
              </div>
            </div>
            <div class="row">
              <div class="col-xs-1">
              </div>
              <div class="col-xs-5 text-center">
                <span>({{reviews_num}})</span>
              </div>
              <div class="col-xs-5 text-center">
                <span>(</span><span class="fav-num">{{favorites_num}}</span><span>)</span>
              </div>
              <div class="col-xs-1">
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <div class="section-title container">
    <h4>Categories You Might Like</h4>
  </div>

  <div class="container content">

    <div class="row text-center">
      <div class="col-xs-offset-3 col-xs-6">
        <a href="/categories/accessories">
          <img class="img-thumbnail" src="../img/black_hat.png" alt="">
          <br>
          Accessories
        </a>
      </div>
    </div>

    <br>

    <div class="row text-center">
      <div class="col-xs-offset-3 col-xs-6">
        <a href="/categories/shoes">
          <img class="img-thumbnail" src="../img/nike_shoes.jpg" alt="">
          <br>
          Shoes
        </a>
      </div>
    </div>
  </div>
